generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Model User untuk Admin
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  role          String    @default("admin")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Model Produk Tour
model Product {
  id            String        @id @default(cuid())
  name          String
  slug          String        @unique
  description   String        @db.Text
  price         Decimal       @db.Decimal(12, 2)
  discountPrice Decimal?      @db.Decimal(12, 2)
  duration      String        // "9 Hari 8 Malam"
  type          ProductType   // HAJI atau UMROH
  departure     DateTime
  quota         Int
  quotaFilled   Int           @default(0)
  features      Json          // Array of features
  itinerary     Json          // Array of itinerary items
  images        String        @db.Text // Comma separated URLs
  isActive      Boolean       @default(true)
  isFeatured    Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  cartItems     CartItem[]
  
  @@map("products")
}

enum ProductType {
  HAJI
  UMROH
}

// Model Cart Item (untuk tracking sementara)
model CartItem {
  id        String   @id @default(cuid())
  productId String
  quantity  Int      @default(1)
  sessionId String   // Untuk guest users
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@map("cart_items")
}

// Model Gallery
model Gallery {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  imageUrl    String
  category    String   // "Haji", "Umroh", "Kegiatan"
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("galleries")
}

// Model Blog
model Blog {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String   @db.Text
  excerpt     String?  @db.Text
  coverImage  String
  author      String
  category    String   // "Tips", "Panduan", "Berita"
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("blogs")
}

// Model Settings untuk informasi website
model Setting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   @db.Text
  description String?
  updatedAt   DateTime @updatedAt

  @@map("settings")
}

// Model Visitor Stats (Agregasi per hari untuk efisiensi)
model VisitorStat {
  id            String   @id @default(cuid())
  date          DateTime @db.Date // Tanggal (tanpa waktu)
  pageViews     Int      @default(0) // Total page views
  uniqueVisitors Int     @default(0) // Unique visitors (based on session)
  productViews  Int      @default(0) // Product detail views
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([date])
  @@index([date])
  @@map("visitor_stats")
}

// Model Hero Section
model HeroSection {
  id            String   @id @default(cuid())
  title         String   @db.Text
  subtitle      String   @db.Text
  description   String?  @db.Text
  buttonText    String   @default("Lihat Paket")
  buttonLink    String   @default("/products")
  imageUrl      String?
  backgroundUrl String?  // Background image or GIF URL
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("hero_sections")
}

// Model Hero Stats
model HeroStat {
  id          String   @id @default(cuid())
  label       String   // "Pengalaman", "Jamaah", "Kepuasan"
  value       String   // "10+", "5000+", "100%"
  suffix      String?  // "Tahun", "Jamaah", dll
  icon        String?  // Icon name dari lucide-react
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("hero_stats")
}

// Model Why Choose Us
model WhyChooseUs {
  id          String   @id @default(cuid())
  icon        String   // Icon name dari lucide-react
  title       String
  description String   @db.Text
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("why_choose_us")
}

// Model Testimonial
model Testimonial {
  id          String   @id @default(cuid())
  name        String
  role        String   // "Jamaah Umroh 2024", dll
  content     String   @db.Text
  rating      Int      @default(5) // 1-5
  imageUrl    String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("testimonials")
}

// Model Media untuk File Manager
model Media {
  id          String   @id @default(cuid())
  filename    String   // Original filename
  filepath    String   @unique // Path in public/uploads
  filesize    Int      // File size in bytes
  mimetype    String   // image/jpeg, video/mp4, etc
  mediaType   String   @default("image") // "image" or "video"
  width       Int?     // Image/Video width
  height      Int?     // Image/Video height
  duration    Int?     // Video duration in seconds
  alt         String?  // Alt text for SEO
  title       String?  // Title for the media
  uploadedBy  String?  // User ID who uploaded
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("media")
}